            </Socials>
          </nav>
        </div>
      </div>
    </SContainer>
  </main>

  <SContainer
    id="experiencia"
    class="bg-gradient-to-r from-slate-900/50 to-slate-800/30 rounded-2xl p-4 mt-10">
    <h2
      class="text-xl sm:text-2xl font-semibold mb-4 flex gap-x-3 items-center">
      <ExperienceIcon class="size-6" />
      Experiencia Laboral
    </h2>
    <TimeLine />
  </SContainer>
  <SContainer
    id="educacion"
    class="bg-gradient-to-r from-slate-900/50 to-slate-800/30 rounded-2xl p-4 mt-10">
